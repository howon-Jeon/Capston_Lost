<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/lost_toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/chosun_blue">

        <Button
        android:id="@+id/lost_back_button"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:background="@drawable/back_icon"/>

        <TextView
            android:id="@+id/lost_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="분실물"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </androidx.appcompat.widget.Toolbar>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/lost_cat_total"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:text="전체"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/lost_cat_button_background"/>
            <Button
                android:id="@+id/lost_cat_card"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="카드"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/lost_cat_button_background"/>
            <Button
                android:id="@+id/lost_cat_wallet"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="지갑"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/lost_cat_button_background"/>
            <Button
                android:id="@+id/lost_cat_bag"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="가방"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/lost_cat_button_background"/>
            <Button
                android:id="@+id/lost_cat_etc"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:text="기타"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/lost_cat_button_background"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lost_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>