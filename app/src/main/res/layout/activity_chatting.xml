<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/chatting_toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/chosun_blue">
        
        <Button
            android:id="@+id/chatting_back_button"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@drawable/back_icon"/>

        <TextView
            android:id="@+id/chatting_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="채팅"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </androidx.appcompat.widget.Toolbar>
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatting_recycle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        
        <EditText
            android:id="@+id/chatting_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/home_min_button_background"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"
            android:textSize="24sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/chatting_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/chatting_button"
            android:layout_margin="10dp"/>

    </LinearLayout>

</LinearLayout>