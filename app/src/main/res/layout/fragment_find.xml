<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabLayout"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--        물품 종류-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="물품 종류"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:hint="물품 종류를 입력하세요"
                        android:gravity="end"
                        android:background="none"
                        android:fontFamily="@font/gmarket"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerParent="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="16dp"
                android:background="#D9D9D9" />

            <!--            습득 시작 일자-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="습득 시작 일자"
                    android:layout_gravity="bottom"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <ImageButton
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="none"
                    android:layout_gravity="bottom"
                    app:srcCompat="@drawable/date_today" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerParent="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="16dp"
                android:background="#D9D9D9" />

            <!--            습득 종료 일자-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="습득 종료 일자"
                    android:layout_gravity="bottom"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <ImageButton
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="none"
                    android:layout_gravity="bottom"
                    app:srcCompat="@drawable/date_today" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerParent="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="16dp"
                android:background="#D9D9D9" />

            <!--            습득 장소-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="습득 장소"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:hint="습득 장소를 입력하세요"
                        android:gravity="end"
                        android:background="none"
                        android:fontFamily="@font/gmarket"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerParent="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="16dp"
                android:background="#D9D9D9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="80dp" >

                <Button
                    android:id="@+id/button"
                    android:layout_width="126dp"
                    android:layout_height="56dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/blue_button"
                    android:layout_marginEnd="50dp"
                    android:textSize="16sp"
                    android:text="확인" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="126dp"
                    android:layout_height="56dp"
                    android:background="@drawable/white_button"
                    android:textColor="@color/chosun_blue"
                    android:textSize="16sp"
                    android:text="취소" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>