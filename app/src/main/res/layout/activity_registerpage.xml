<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registerpage">

    <TextView
        android:id="@+id/registerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gmarketsansttfbold"
        android:text="회원가입"
        android:textColor="@color/chosun_blue"
        android:textSize="24sp"
        android:layout_marginTop="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/member_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="이름"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerTitle"
        android:fontFamily="@font/gmarket"
        android:textSize="16sp"
        android:backgroundTint="#D9D9D9"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/member_edit_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="이메일 주소를 입력해주세요"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/member_edit_name"
        android:fontFamily="@font/gmarket"
        android:textSize="16sp"
        android:backgroundTint="#D9D9D9"
        android:textColor="#636363" />

    <TextView
        android:id="@+id/member_edit_id_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="올바르지 않은 이메일 형식입니다"
        android:textColor="#FF5858"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/member_edit_id"
        app:layout_constraintTop_toBottomOf="@+id/member_edit_id" />

    <EditText
        android:id="@+id/member_edit_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="비밀번호를 입력해주세요"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/member_edit_id"
        android:fontFamily="@font/gmarket"
        android:textSize="16sp"
        android:backgroundTint="#D9D9D9"
        android:textColor="#636363" />

    <TextView
        android:id="@+id/member_edit_pw_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="영어, 숫자, 특수문자 조합 7자리 이상"
        android:textColor="@color/chosun_blue"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/member_edit_pw"
        app:layout_constraintTop_toBottomOf="@+id/member_edit_pw" />

    <EditText
        android:id="@+id/member_edit_pw_re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="비밀번호를 다시 입력해주세요"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/member_edit_pw"
        android:fontFamily="@font/gmarket"
        android:textSize="16sp"
        android:backgroundTint="#D9D9D9"
        android:textColor="#636363" />

    <TextView
        android:id="@+id/member_edit_pw_re_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="비밀번호가 일치하지 않습니다"
        android:textColor="#FF5858"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/member_edit_pw_re"
        app:layout_constraintTop_toBottomOf="@+id/member_edit_pw_re" />


    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/gmarketsansttfbold"
        android:text="완료"
        android:layout_marginTop="45dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/member_edit_pw_re"
        android:textSize="24sp"
        android:background="@drawable/blue_button" />

</androidx.constraintlayout.widget.ConstraintLayout>